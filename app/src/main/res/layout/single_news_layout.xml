<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/singleNewsLinearLayout"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/imageViewSingleNews"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="14"/>

    <TextView
            android:id="@+id/textViewSingleNewsTitle"
            android:textSize="20sp"
            android:paddingStart="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:textColor="@color/black"/>
    <TextView
            android:id="@+id/textViewSingleNewsDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="5"
            android:textSize="17sp"
            android:textColor="#595959"/>
    <TextView
        android:id="@+id/textViewSingleNewsUrl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="5"
        android:textSize="12sp"
        android:textColor="#3C3C3C"/>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/singleNewsLinearLayoutButtons"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/prev"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prev"
            android:background="@color/black"
            >
        </Button>

        <Button
            android:id="@+id/next"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="next"
            android:background="@color/black"
            >
        </Button>

    </LinearLayout>

</LinearLayout>